<h1>Login </h1>

@model Employee





@using (Html.BeginForm("Index", "Employee", FormMethod.Get))
{


    <div class="row mb-3">
        @Html.LabelFor(ww => ww.FName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(ww => ww.FName, additionalViewData: new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(ww => ww.FName, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>



    <div class="row mb-3">
        @Html.LabelFor(ww => ww.LoginPassward, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.EditorFor(ww => ww.LoginPassward, additionalViewData: new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(ww => ww.LoginPassward, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>





    <input type="submit" class="btn btn-primary" value="Login" />

}





